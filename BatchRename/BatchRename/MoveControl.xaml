<local:Control x:Class="BatchRename.MoveControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        d:DesignHeight="160" d:DesignWidth="250" Background="AliceBlue">
    <Canvas Background="AliceBlue">
        <TextBlock Text="Move" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10"/>
        <TextBlock Text="Start at" Canvas.Left="11" Canvas.Top="32" />
        <TextBox Name="txtStartAt" Text="0" Width="100" Canvas.Left="76" Canvas.Top="30"/>
        <TextBlock Text="Length" Canvas.Left="11" Canvas.Top="57"/>
        <TextBox Name="txtLength" Text="13" Width="100" Canvas.Left="76" Canvas.Top="55"/>
        <TextBlock Text="Move to" Canvas.Top="88" Canvas.Left="11"/>
        <ComboBox Name="moveCombobox" Canvas.Left="76" Canvas.Top="79" 
                       Height="25" Width="100">
            <ComboBoxItem Content="Begin" IsSelected="True"/>
            <ComboBoxItem Content="End"/>
        </ComboBox>
        <Button  Width="80" Height="25" Click="Add_to_list"
                Content="Add to list" Canvas.Left="146" Canvas.Top="118"/>
    </Canvas>
</local:Control>
