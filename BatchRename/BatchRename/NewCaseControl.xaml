<Window x:Class="BatchRename.NewCaseControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Title="NewCaseControl" Height="160" Width="250" WindowStyle="None">
    <Canvas>
        <TextBlock Text="NewCase" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10"/>
        <ComboBox Height="25" Canvas.Left="10" Canvas.Top="37" Width="123">
            <ComboBoxItem Content="UpperCase"/>
            <ComboBoxItem Content="LowerCase"/>
            <ComboBoxItem Content="FirstUppercase"/>
        </ComboBox>
        <Button  Width="80" Height="25" 
                Content="Add to list" Canvas.Left="146" Canvas.Top="118"/>
    </Canvas>
</Window>
