<local:Control x:Class="BatchRename.FullnameNormalizeControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        d:DesignHeight="160" d:DesignWidth="250" Background="AliceBlue">
    <Canvas>
        <TextBlock Text="Fullname normalize" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10"/>
        <ComboBox Height="25" Name="normalizefullnameCombobox"
                  Canvas.Left="10" Canvas.Top="36" Width="170"
                  >
            <ComboBoxItem Content="No space at two endings" IsSelected="True"/>
            <ComboBoxItem Content="Capitalize first letter"/>
            <ComboBoxItem Content="No extra spaces among words"/>
        </ComboBox>

        <Button  Width="80" Height="25" 
                Content="Add to list" 
                Click="Add_to_list"
                Canvas.Left="146" Canvas.Top="118"/>
        <Button  Width="80" Height="25" Click="Add_to_list"
                Content="Add to list" Canvas.Left="146" Canvas.Top="118"/>
    </Canvas>
</local:Control>
